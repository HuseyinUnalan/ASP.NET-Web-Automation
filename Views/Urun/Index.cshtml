@using FinalProje.Models.Siniflar
@model List<Urun>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Ürün Listesi</h2>

<br />
@using (Html.BeginForm("Index", "Urun", FormMethod.Get))
{
    <p>
        Ürün Adı: @Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>
}
<br />
<table class="table table-bordered" style="margin-top:20px;">
    <tr>
        <th>ID</th>
        <th>ÜRÜN Adı</th>
        <th>MARKA</th>
        <th>STOK</th>
        <th>ALIŞ FİYAT</th>
        <th>SATIŞ FİYAT</th>
        <th>KATEGORİ</th>
        <th>GÖRSEL</th>
        <th>GÜNCELLE</th>
        <th>Satış Yap</th>
    </tr>
    @foreach (var u in Model)
    {
<tr>
    <td>@u.Urunid</td>
    <td>@u.UrunAd</td>
    <td>@u.Marka</td>
    <td>@u.Stok</td>
    <td>@u.AlisFiyat</td>
    <td>@u.SatisFiyat</td>
    <td>@u.Kategori.KategoriAd</td>
    <td>@u.UrunGorsel</td>
    <td><a href="/Urun/UrunGetir/@u.Urunid" class="btn btn-success">Güncelle</a></td>
    <td><a href="/Urun/SatisYap/@u.Urunid" class="btn btn-default" style="background-color:#0094ff">Satış Yap</a></td>
</tr>
    }
</table>

<a href="/Urun/YeniUrun" class="btn btn-primary">Yeni Ürün Ekle</a>
